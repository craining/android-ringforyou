<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_light"
    android:orientation="vertical" >

    <!-- 动态显示界面 -->

    <LinearLayout
        android:id="@+id/tab_layout_topbody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
    </LinearLayout>
    <!-- 底部功能菜单栏 -->

    <LinearLayout
        android:id="@+id/tab_layout_bottombody"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="9"
        android:background="@drawable/tab_bg"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/tab_important"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_tab_important"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_important"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_call"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_tab_call"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_call"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tab_sms"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_tab_sms"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_sms"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        
         <LinearLayout
            android:id="@+id/tab_more"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/img_tab_more"
                android:layout_width="32dp"
                android:layout_height="30dp"
                android:layout_gravity="top|center"
                android:layout_marginTop="4dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/tab_more"
                android:textColor="@color/white"
                android:textSize="12sp" />
        </LinearLayout>
        
    </LinearLayout>

</LinearLayout>