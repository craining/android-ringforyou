<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_tab_sms_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_light"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_more_title"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_bar_top"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/text_more_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/tab_more"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_more_title" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="40dip" >

            <!-- 常规设置项 -->

            <LinearLayout
                android:id="@+id/layout_more_normal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dip"
                android:layout_marginRight="30dip"
                android:layout_marginTop="20dip"
                android:background="@drawable/bg_bolder"
                android:orientation="vertical" >

                <!-- 振动 -->

                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dip" >

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_verb"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_verb_info"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/img_more_checkv"
                        android:layout_width="50dip"
                        android:layout_height="20dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dip"
                        android:clickable="true"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_on" />
                </RelativeLayout>

                <!-- 特色功能 -->

                <RelativeLayout
                    android:id="@+id/layout_more_tools"
                    android:layout_width="fill_parent"
                    android:layout_height="52dip"
                    android:background="@drawable/bg_list_item"
                    android:clickable="true" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_alignParentTop="true"
                        android:background="@color/light_blue_bg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/tools_str"
                                android:textColor="@color/black"
                                android:textSize="15sp" />

                            <RelativeLayout
                                android:layout_width="18dip"
                                android:layout_height="18dip"
                                android:layout_marginLeft="5dip" >

                                <ImageView
                                    android:layout_width="fill_parent"
                                    android:layout_height="fill_parent"
                                    android:scaleType="centerInside"
                                    android:src="@drawable/bg_count" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_centerHorizontal="true"
                                    android:layout_centerVertical="true"
                                    android:text="5"
                                    android:textColor="@color/white"
                                    android:textSize="8sp" />
                            </RelativeLayout>
                        </LinearLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/tools_info"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_list_arrow" />
                </RelativeLayout>

                <!-- 反馈 -->

                <RelativeLayout
                    android:id="@+id/layout_more_feedback"
                    android:layout_width="fill_parent"
                    android:layout_height="52dip"
                    android:background="@drawable/bg_list_item"
                    android:clickable="true" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_alignParentTop="true"
                        android:background="@color/light_blue_bg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/feedback_info"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="15dip"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="18dip"
                        android:clickable="false"
                        android:contentDescription="@string/app_name"
                        android:src="@drawable/ic_list_arrow" />
                </RelativeLayout>

                <!-- 清空缓存 -->

                <RelativeLayout
                    android:id="@+id/layout_more_clear"
                    android:layout_width="fill_parent"
                    android:layout_height="52dip"
                    android:background="@drawable/bg_list_item"
                    android:clickable="true" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_alignParentTop="true"
                        android:background="@color/light_blue_bg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_str"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/clear_str_info"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <!-- 关于 -->

                <RelativeLayout
                    android:id="@+id/layout_more_help"
                    android:layout_width="fill_parent"
                    android:layout_height="52dip"
                    android:background="@drawable/bg_list_item"
                    android:clickable="true" >

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dip"
                        android:layout_alignParentTop="true"
                        android:background="@color/light_blue_bg" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="10dip"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help"
                            android:textColor="@color/black"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/help_info"
                            android:textColor="@color/black"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>