<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/img_top_menu_icon"
        android:layout_width="@dimen/icon_w_h"
        android:layout_height="@dimen/icon_w_h"
        android:layout_marginBottom="@dimen/layout_little_margin"
        android:layout_marginLeft="@dimen/layout_little_margin"
        android:layout_marginRight="@dimen/layout_margin_title"
        android:layout_marginTop="@dimen/layout_little_margin" />

    <TextView
        android:id="@+id/text_top_menu_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:textSize="@dimen/text_size_menu" />

</LinearLayout>