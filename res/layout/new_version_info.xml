<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_about"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/light_blue_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/layout_new_version_title"
        style="@style/layout_top_title" >

        <TextView
            style="@style/text_top_title"
            android:text="@string/newversion_title_info" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/text_new_version_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/title_margin_tn"
            android:layout_marginTop="@dimen/title_margin_tn"
            android:minHeight="@dimen/title_content_minh"
            android:padding="@dimen/title_margin_tn"
            android:textColor="@color/grey"
            android:textSize="@dimen/item_text_size" />
    </ScrollView>

</LinearLayout>