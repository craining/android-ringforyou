<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dlg_bg"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dip"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/receivedata_title"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/text_receivedata_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="20dip"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
        android:layout_marginTop="25dip"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_receivedata_sms"
            android:layout_width="fill_parent"
            android:layout_height="39dip"
            android:layout_marginRight="10dip"
            android:layout_weight="1"
            android:background="@drawable/dlg_btn_bg"
            android:text="@string/receivedata_sms"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_receivedata_call"
            android:layout_width="fill_parent"
            android:layout_height="39dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/dlg_btn_bg"
            android:text="@string/receivedata_call"
            android:textColor="@color/white"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_receivedata_important"
            android:layout_width="fill_parent"
            android:layout_height="39dip"
            android:layout_marginLeft="10dip"
            android:layout_weight="1"
            android:background="@drawable/dlg_btn_blue_bg"
            android:text="@string/receivedata_important"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>