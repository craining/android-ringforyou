<?xml version="1.0" encoding="UTF-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
<!--  颜色渐变效果   -->
    <gradient 
    	android:startColor="@color/white" 
    	android:endColor="@color/white"
        android:paddingTop="5dp" 
        android:angle="0"/>
<!--  按钮四个角的平滑度   -->        
    <corners android:radius="5dip" />
    
<!--  字距离按钮的四个边距    -->    
    <padding
         android:left="2dip"
         android:top="2dip"
         android:right="2dip"
         android:bottom="2dip" />
<!--  按钮的光环的宽度与颜色   -->
    <stroke
         android:width="2dip"
         android:color="@color/login_edit_unfocused" />
    
</shape>

