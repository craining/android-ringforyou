<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="AppTheme" parent="android:Theme.Light" />

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">false</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->

    </style>
    <!-- 与顶部标题栏相关的style -->
    <style name="layout_top_title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/layout_top_height</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:background">@drawable/bg_bar_top</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="btn_left_top_back">
        <item name="android:layout_width">@dimen/btn_width_top</item>
        <item name="android:layout_height">@dimen/btn_height_top</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin_left_right_top</item>
        <item name="android:background">@drawable/bg_btn_return</item>
        <item name="android:paddingLeft">@dimen/btn_padding_left_top_back</item>
        <item name="android:text">@string/back</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_textsize_top_title</item>
    </style>

    <!--
    <style name="btn_left_top_clear">
        <item name="android:layout_width">@dimen/btn_width_top</item>
        <item name="android:layout_height">@dimen/btn_height_top</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/btn_margin_left_right_top</item>
        <item name="android:background">@drawable/bg_btn_red</item>
        <item name="android:text">@string/clear_all</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_textsize_top_title</item>
    </style>
    -->
    <style name="text_top_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_textsize_top_title</item>
    </style>

    <style name="btn_right_top">
        <item name="android:layout_width">@dimen/btn_width_top</item>
        <item name="android:layout_height">@dimen/btn_height_top</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/btn_margin_left_right_top</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_textsize_top_title</item>
    </style>

    <style name="img_right_top_set">
        <item name="android:layout_width">@dimen/img_right_top_set_wh</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginRight">@dimen/btn_margin_left_right_top</item>
        <item name="android:src">@drawable/bg_btn_set</item>
    </style>

    <style name="view_anchor">
        <item name="android:layout_width">1dip</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>

    <!-- 设置区块 -->

    <style name="layout_set_block">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/layout_margin_left_right</item>
        <item name="android:layout_marginRight">@dimen/layout_margin_left_right</item>
        <item name="android:layout_marginTop">@dimen/layout_margin_top_title</item>
        <item name="android:background">@drawable/bg_bolder</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="layout_set_item">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/layout_set_item_height</item>
    </style>

    <style name="layout_set_item_content_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/layout_set_item_margin_left</item>
        <item name="android:layout_marginRight">@dimen/layout_set_item_margin_right</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="text_set_item_content_left_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_set_item_top</item>
    </style>

    <style name="text_set_item_content_left_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/textsize_set_item_bottom</item>
    </style>

    <style name="line_set_item_diver">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_set_item_div_height</item>
        <item name="android:background">@color/light_blue_bg</item>
    </style>

    <style name="line_set_child_item_diver">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/line_set_child_item_div_height</item>
        <item name="android:background">@color/light_blue_bg</item>
    </style>

    <style name="img_set_item_selected">
        <item name="android:layout_width">@dimen/img_set_item_selected_wh</item>
        <item name="android:layout_height">@dimen/img_set_item_selected_wh</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/img_set_item_selected_margin_right</item>
        <item name="android:clickable">true</item>
        <item name="android:src">@drawable/ic_selected</item>
    </style>

    <!-- 设置页，item右侧开关按钮 -->
    <style name="checkbox_set_item_switch">
        <item name="android:layout_width">@dimen/img_set_item_switch_width</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/img_set_item_switch_margin_right</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_checkbox_setting_check</item>
        <item name="android:layout_marginBottom">@dimen/img_set_item_switch_padding_tb</item>
        <item name="android:layout_marginTop">@dimen/img_set_item_switch_padding_tb</item>
    </style>

    <style name="checkbox_set_item_check">
        <item name="android:layout_width">@dimen/img_set_item_check_wh</item>
        <item name="android:layout_height">@dimen/img_set_item_check_wh</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/img_set_item_check_margin_right</item>
        <item name="android:button">@null</item>
        <item name="android:clickable">false</item>
        <item name="android:background">@drawable/selector_checkbox_setting</item>
    </style>

    <!-- 设置页，右侧箭头 -->
    <style name="img_set_item_arrow">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/img_set_item_arrow_height</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/img_set_item_arrow_margin_right</item>
        <item name="android:src">@drawable/ic_list_arrow</item>
    </style>

    <style name="img_set_calm_item_right">
        <item name="android:layout_width">@dimen/img_set_calm_item_right_wh</item>
        <item name="android:layout_height">@dimen/img_set_calm_item_right_wh</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">@dimen/img_set_calm_item_right_margin_right</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="text_set_calm_item_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginLeft">@dimen/text_set_calm_item_left_margin_left</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/textsize_set_item_bottom</item>
    </style>

    <style name="text_tab_bottom">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/textsize_tab_bottom</item>
    </style>

    <style name="img_tab_bottom">
        <item name="android:layout_width">@dimen/img_tab_w</item>
        <item name="android:layout_height">@dimen/img_tab_h</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/img_tab_margin_top</item>
    </style>

    <style name="layout_tab_bottom">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="btn_main_add">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">@dimen/btn_main_add_height</item>
        <item name="android:layout_weight">2</item>
        <item name="android:background">@drawable/bg_btn_blue</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_textsize_main_add</item>
    </style>

</resources>